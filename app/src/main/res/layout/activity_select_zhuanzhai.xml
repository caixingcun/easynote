<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include layout="@layout/include_toolbar"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  app:layout_behavior="@string/appbar_scrolling_view_behavior"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="转债类型:"
                      android:textSize="16sp"
                      android:layout_marginLeft="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <Spinner android:layout_width="match_parent"
                     android:id="@+id/spinner_type"
                     android:layout_margin="10dp"
                     android:padding="10dp"
                     android:entries="@array/zhuanzhai_types"
                     android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="转债品级:"
                      android:textSize="16sp"
                      android:layout_marginLeft="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <Spinner android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_marginLeft="28dp"
                     android:layout_gravity="center"
                     android:id="@+id/spinner_quality"
                     android:entries="@array/zhuanzhai_qualitys"
                     android:layout_height="wrap_content">

            </Spinner>
            <TextView android:layout_width="100dp"
                      android:text=" 及以上"
                      android:padding="10dp"
                      android:textSize="16sp"
                      android:layout_marginRight="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1px"
              android:layout_marginLeft="115dp"
              android:layout_marginRight="105dp"
              android:background="@color/black"/>
        <LinearLayout android:layout_width="match_parent"
                      android:visibility="gone"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="当前价格:"
                      android:textSize="16sp"
                      android:layout_marginLeft="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="0dp"
                      android:layout_weight="1"
                      android:hint="100-105"
                      android:text="100-105"
                      android:layout_marginLeft="28dp"
                      android:id="@+id/et_price"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="100dp"
                      android:text="元 及以下"
                      android:textSize="16sp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="转债溢价:"
                      android:textSize="16sp"
                      android:layout_marginLeft="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="0dp"
                      android:layout_weight="1"
                      android:hint="例 2"
                      android:id="@+id/et_premium"
                      android:text="-2"
                      android:layout_marginLeft="28dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="100dp"
                      android:text="% 及以下"
                      android:padding="10dp"
                      android:textSize="16sp"
                      android:layout_marginRight="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="到期年化:"
                      android:textSize="16sp"
                      android:layout_marginLeft="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="0dp"
                      android:layout_weight="1"
                      android:text="2"
                      android:contentDescription="到期年华"
                      android:id="@+id/et_annul"
                      android:hint="例 2"
                      android:layout_marginLeft="28dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="100dp"
                      android:text="% 及以上"
                      android:padding="10dp"
                      android:textSize="16sp"
                      android:layout_marginRight="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="到期年限:"
                      android:textSize="16sp"
                      android:layout_marginLeft="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
            <EditText android:layout_width="0dp"
                      android:layout_weight="1"
                      android:inputType="numberDecimal"
                      android:text="5"
                      android:id="@+id/et_year"
                      android:hint="例 5"
                      android:layout_marginLeft="28dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="100dp"
                      android:text="年内"
                      android:padding="10dp"
                      android:textSize="16sp"
                      android:layout_marginRight="14dp"
                      android:layout_gravity="center_vertical"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:text="查询"
                android:id="@+id/btn_query"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>